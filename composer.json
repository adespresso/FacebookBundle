{
    "authors": [
        {
            "email": "emanuele@adespresso.com",
            "name": "Emanuele Minotto"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "AdEspresso\\FacebookBundle\\": "src/AdEspresso/FacebookBundle/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AdEspresso\\FacebookBundle\\": "tests/AdEspresso/FacebookBundle/"
        }
    },
    "description": "Symfony Bundle for Facebook interactions' management",
    "keywords": [
        "symfony",
        "bundle",
        "facebook"
    ],
    "license": "MIT",
    "name": "adespresso/facebook-bundle",
    "require": {
        "php": "^5.6 || ^7.0",
        "facebook/graph-sdk": "^5.6",
        "facebook/php-ads-sdk": "^2.10",
        "symfony/symfony": "^2.8 || ^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.4",
        "guzzlehttp/guzzle": "^6.2",
        "matthiasnoback/symfony-dependency-injection-test": "^2.1",
        "phpunit/phpunit": "^6.0"
    },
    "scripts": {
        "test": [
            "php-cs-fixer --ansi -vv fix",
            "phpunit --colors=always -v"
        ]
    },
    "type": "symfony-bundle"
}
